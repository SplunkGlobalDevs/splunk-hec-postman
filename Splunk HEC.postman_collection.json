{
	"info": {
		"_postman_id": "64a47249-893d-49d8-9741-2dd91a35d5a7",
		"name": "Splunk HEC",
		"description": "SPLUNK HEC (Http Event Collector)\n\nCollection created as a sample on how to send data to Splunk using http requests.\n\nThis collections was created by FÃ¡bio Caldas (splunk@fabiocaldas.com).",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Send JSON Data",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Splunk {{token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\"event\": \"hello world\"}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{protocol}}://{{host}}:{{port}}/{{endpoint_json}}",
					"protocol": "{{protocol}}",
					"host": [
						"{{host}}"
					],
					"port": "{{port}}",
					"path": [
						"{{endpoint_json}}"
					]
				}
			},
			"response": []
		},
		{
			"name": "Send RAW Data",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"type": "text",
						"value": "Splunk {{token}}"
					},
					{
						"key": "Content-Type",
						"type": "text",
						"value": "text/plain"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "hello world",
					"options": {
						"raw": {
							"language": "text"
						}
					}
				},
				"url": {
					"raw": "{{protocol}}://{{host}}:{{port}}/{{endpoint_raw}}",
					"protocol": "{{protocol}}",
					"host": [
						"{{host}}"
					],
					"port": "{{port}}",
					"path": [
						"{{endpoint_raw}}"
					]
				}
			},
			"response": []
		}
	],
	"event": [
